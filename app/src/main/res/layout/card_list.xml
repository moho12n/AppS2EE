<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/List"
    android:background="@drawable/colorcardraduis"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/EntreprisePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/EntrepriseNom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/EntreprisePhoto"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/EntreprisePhoto"
            android:fontFamily="sans-serif-smallcaps"
            android:text="EntrepriseNom_ici"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/EntreprisDescritpion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EntrepriseNom"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/EntreprisePhoto"
            android:text="EntrepriseDescrition_ici"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
