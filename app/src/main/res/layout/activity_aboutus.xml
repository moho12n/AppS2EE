<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.s2ee.etic.apps2ee.AboutusActivity"
    android:orientation="vertical"
    android:background="#FFB53D3F">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/colorcard"
        android:paddingBottom="1dp"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>


 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="Qui Somme Nous?"
              android:textSize="30dp"
              android:textColor="@android:color/white"
              android:textStyle="italic"
              android:fontFamily="@font/pacifico"
              />
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginVertical="5dp"
              android:layout_marginHorizontal="5dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="10dp"
              app:cardBackgroundColor="#FFB53D3F">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/colorcardraduis">
                  <TextView
                      android:layout_margin="10dp"
                      android:layout_width="match_parent"
                      android:id="@+id/A1"
                      android:textColor="#FF062000"
                      android:layout_height="match_parent"
                      android:textSize="20dp"/>
              </LinearLayout>


          </android.support.v7.widget.CardView>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="Que faisons nous ?"
              android:textSize="30dp"
              android:textColor="@android:color/white"
              android:textStyle="italic"
              android:fontFamily="@font/pacifico"
              />
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginVertical="5dp"
              android:layout_marginHorizontal="5dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="10dp"
              app:cardBackgroundColor="#FFB53D3F">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/colorcardraduis">
                  <TextView
                      android:layout_margin="10dp"
                      android:layout_width="match_parent"
                      android:id="@+id/A2"
                      android:layout_height="match_parent"
                      android:textColor="#FF062000"
                      android:textSize="20dp"/>
              </LinearLayout>


          </android.support.v7.widget.CardView>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="Nos valeurs"
              android:textSize="30dp"
              android:textColor="@android:color/white"
              android:textStyle="italic"
              android:fontFamily="@font/pacifico"
              />
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginVertical="5dp"
              android:layout_marginHorizontal="5dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="10dp"
              app:cardBackgroundColor="#FFB53D3F">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/colorcardraduis">
                  <TextView
                      android:layout_margin="10dp"
                      android:layout_width="match_parent"
                      android:id="@+id/A3"
                      android:textColor="#FF062000"
                      android:layout_height="match_parent"
                      android:textSize="20dp"/>
              </LinearLayout>
          </android.support.v7.widget.CardView>


      </LinearLayout>

 </ScrollView>



</LinearLayout>
